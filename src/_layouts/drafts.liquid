---
layout: 'base'
---
<div data-layout='drafts' class='inner-wrapper'>
  <div class='page-content'>
    {% unless useHero %}
      <h2>{{ title }}</h2>
    {% endunless %}
    {{ content }}
  </div>

  {%- if collections.drafts.size > 0 -%}
    <p>Deze pagina's staan klaar om gedeeld te worden:</p>

    <table markdown='1'>
      <thead></thead>
      <tbody>
        <tr>
          <td>Taal</td>
          <td>Titel pagina</td>
          <td>Type pagina</td>
        </tr>
        {%- for draft in collections.drafts -%}
          <tr>
            <td>{{ draft.data.locale }}</td>
            <td>
              <a href='{{ draft.url }}'>{{ draft.data.title }}</a>
            </td>
            <td>
              {%- for tag in draft.data.tags -%}
                {{ tag }}
              {%- endfor -%}
            </td>
          </tr>
        {%- endfor -%}
      </tbody>
    </table>

  {%- else -%}
    Er zijn geen pagina's als 'draft' opgeslagen!
  {%- endif -%}
</div>
